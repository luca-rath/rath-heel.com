---
import profilePicture from '../../assets/images/luca-rath-heel.png';
import GitHubIcon from '../../assets/icons/github.svg';
import LinkedInIcon from '../../assets/icons/linkedin.svg';
import MailIcon from '../../assets/icons/mail.svg';
import SocialLink from '../atoms/social-link.astro';
---

<header aria-labelledby="title" aria-describedby="description">
    <div class="mx-auto flex max-w-sm flex-col items-center gap-y-4 sm:max-w-md">
        <img
            class="h-32 w-32 rounded-full object-cover drop-shadow-lg"
            src={profilePicture.src}
            alt="Luca Rath-Heel"
            width={128}
            height={128}
            loading="eager"
        />

        <h1 id="title" class="text-center text-4xl font-extrabold tracking-tight text-zinc-800 sm:text-5xl">
            Luca Rath-Heel
        </h1>

        <p id="description" class="prose prose-xl prose-zinc text-center sm:prose-2xl">
            Hi üëãüèª I&apos;m Luca and I work as a full&nbsp;stack software&nbsp;engineer.
        </p>

        <div class="mt-4 flex gap-4">
            <SocialLink label="Find me on GitHub" href="https://github.com/luca-rath">
                <GitHubIcon class="h-10 w-10" role="img" />
            </SocialLink>

            <SocialLink label="Follow me on LinkedIn" href="https://linkedin.com/in/luca-rath">
                <LinkedInIcon class="h-10 w-10" role="img" />
            </SocialLink>

            <SocialLink label="Get in touch" href="mailto:luca@rath-heel.com" target="_self">
                <MailIcon class="h-10 w-10" role="img" />
            </SocialLink>
        </div>
    </div>
</header>
