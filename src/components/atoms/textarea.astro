---
import { twMerge } from 'tailwind-merge';
import Field from './field.astro';

type Props = astroHTML.JSX.TextareaHTMLAttributes & {
    name: string;
    label: string;
    required?: boolean;
    disabled?: boolean;
};

const { name, label, required = false, disabled = false, id, class: className, ...props } = Astro.props;
---

<Field id={id || name} label={label} required={required} disabled={disabled}>
    <textarea
        name={name}
        id={id || name}
        required={required}
        disabled={disabled}
        class={twMerge(
            'block min-h-[5rem] w-full border-0 bg-transparent p-0 text-zinc-900 placeholder-zinc-500 focus:ring-0 disabled:resize-none sm:text-sm',
            className,
        )}
        {...props}></textarea>
</Field>
