---
import { cva, type VariantProps } from 'class-variance-authority';

const fieldVariants = cva(
    'rounded-md border border-zinc-300 px-3 py-2 shadow-sm focus-within:border-zinc-900 focus-within:ring-1 focus-within:ring-zinc-900',
    {
        variants: {
            disabled: {
                true: 'bg-zinc-100',
            },
        },
    },
);

type Props = {
    id: string;
    label: string;
    disabled: boolean;
    required: boolean;
} & VariantProps<typeof fieldVariants>;

const { id, label, disabled } = Astro.props;
---

<div class={fieldVariants({ disabled })}>
    <label for={id} class="block text-xs font-medium text-zinc-500">
        {label}
    </label>
    <slot />
</div>
